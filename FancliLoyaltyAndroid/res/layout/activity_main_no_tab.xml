<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/navigation_animation_layout"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >

            <RelativeLayout
                android:id="@+id/title_bar_with_space_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <View
                    android:id="@+id/title_bar_size_adjustment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

                <RelativeLayout
                    android:id="@+id/space_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/title_bar_size_adjustment_layout"
                    android:background="@drawable/product_detail_bg" />
            </RelativeLayout>

            <include layout="@layout/navigation_bar_header" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>