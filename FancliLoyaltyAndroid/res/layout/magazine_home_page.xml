<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/espoir_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_magazine_cat_lft_on" >

            <TextView
                android:id="@+id/espoir_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/espoir_magazine"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fh_layout"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_magazine_cat_rgt_off" >

            <TextView
                android:id="@+id/fh_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/fh_magazine"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <com.fancl.iloyalty.item.CustomTabBar
        android:id="@+id/magazine_section_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Transparent" />

    <ListView
        android:id="@+id/magazine_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/Transparent"
        android:divider="@color/Transparent"
        android:dividerHeight="0dp"
        android:listSelector="@color/Transparent"
        android:scrollingCache="false" />

</LinearLayout>