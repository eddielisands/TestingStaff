<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <include layout="@layout/detail_bg" />
    
    <LinearLayout 
        android:layout_width="294dip"
        android:layout_height="273dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
        
        <RelativeLayout 
              android:id="@+id/sign_up_welcome_userguide_title"
		      android:layout_height="0dip"
		      android:layout_width="match_parent"
		      android:layout_weight="1.5">
		      
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/sign_up_welcome_userguide_title"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="18sp" />
            
        </RelativeLayout>
        
        <RelativeLayout 
              android:id="@+id/sign_up_welcome_userguide_msg"
		      android:layout_height="0dip"
		      android:layout_width="match_parent"
		      android:layout_weight="1.5">
		      
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/sign_up_welcome_userguide_msg"
            android:textColor="@color/blue"
            android:textSize="14sp" />
            
        </RelativeLayout>
        
        <RelativeLayout 
              android:id="@+id/sign_up_welcome_userguide_confirm_btn"
		      android:layout_height="0dip"
		      android:layout_width="match_parent"
		      android:layout_weight="1.5">
            
            <RelativeLayout 
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="107dip"
                android:layout_height="38dip"
                android:background="@drawable/btn_confirm">
		      
	            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_centerHorizontal="true"
	            android:gravity="center"
	            android:text="@string/confirm_btn_title"
	            android:textColor="@color/white"
	            android:textStyle="bold"
	            android:textSize="16sp" />
            </RelativeLayout>
            
        </RelativeLayout>
        
        </LinearLayout>

</RelativeLayout>