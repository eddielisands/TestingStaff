<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ScrollView
        android:layout_width="218dip"
        android:layout_height="wrap_content"
        android:background="@drawable/box_qna" >
    
    <LinearLayout 
            android:id="@+id/qna_detail_layout"
            android:layout_width="218dip"
            android:layout_height="366dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="90dip">
                
                <TextView 
                    android:id="@+id/qna_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dip"
                    android:textColor="@color/Fancl_Blue"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:text="Step"/>
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="70dip">
                
                <TextView 
                    android:id="@+id/qna_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/Fancl_Blue"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Questionï¼š"/>
                
            </RelativeLayout>
            
           
            
        </LinearLayout>
        </ScrollView>
    

</RelativeLayout>