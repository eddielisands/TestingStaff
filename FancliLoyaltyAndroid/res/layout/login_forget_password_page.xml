<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/detail_bg" />

    <LinearLayout
        android:layout_width="294dip"
        android:layout_height="273dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:focusable="true" 
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/login_page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/login_forget_password_title"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_forget_password_phone_field_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/mobile_edit_text"
                android:layout_width="254dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="20dp"
                android:hint="@string/login_forget_password_phone_field_title"
                android:singleLine="true"
                android:inputType="none|textNoSuggestions"
                android:textColor="@color/Fancl_Grey"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_forget_password_email_field_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/email_edit_text"
                android:layout_width="254dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dip"
                android:hint="@string/login_forget_password_email_field_title"
                android:textColor="@color/Fancl_Grey"
                android:inputType="none|textNoSuggestions"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_page_forget_password_btn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:gravity="center"
                android:text="@string/login_forget_password_new_password_title"
                android:textColor="@color/blue"
                android:textSize="12sp" />
            -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_page_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/login_forget_password_cancel_btn"
                        android:layout_width="107dip"
                        android:layout_height="38dip"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/btn_cancel" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="@string/cancel_btn_title"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <RelativeLayout
                        android:id="@+id/login_forget_password_confirm_btn"
                        android:layout_width="107dip"
                        android:layout_height="38dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/btn_confirm" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="@string/confirm_btn_title"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>