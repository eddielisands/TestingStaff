<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  android:background="@drawable/list_item_selector"
  android:weightSum="2">
    <LinearLayout 
    	android:layout_width="match_parent" 
    	android:layout_margin="10dip" 
    	android:layout_height="match_parent" 
    	android:baselineAligned="false"
    	android:layout_weight="1.8">
        <ImageView 
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:id="@+id/feed_thumbnail"
        	android:layout_marginRight="10dip"
        	android:layout_gravity="center"
        	android:src="@drawable/no_image"
        	android:maxHeight="100dip"
        	android:maxWidth="100dip">
        </ImageView>
        <LinearLayout 
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:layout_width="wrap_content">
            <TextView 
            	android:layout_width="wrap_content"
            	android:id="@+id/item_title"
            	android:textAppearance="?android:attr/textAppearanceLarge"
            	android:layout_height="wrap_content"
            	android:textColorHighlight="@color/gray"
            	android:textColor="@color/dark_blue_text"
            	android:layout_marginTop="35dip"
            	android:textStyle="bold">
            </TextView>
            <TextView 
            	android:layout_width="wrap_content" 
            	android:id="@+id/pub_date"
            	android:textAppearance="?android:attr/textAppearanceSmall" 
            	android:layout_height="wrap_content" 
            	android:layout_marginBottom="10dip" 
            	android:textColor="@color/gray">
            </TextView>
            <TextView 
            	android:layout_width="wrap_content" 
            	android:id="@+id/text"
            	android:textAppearance="?android:attr/textAppearanceSmall" 
            	android:layout_height="wrap_content" 
            	android:maxLines="2" 
            	android:ellipsize="end" 
            	android:textColor="@color/black">
            </TextView>
        </LinearLayout>
    </LinearLayout>
     <LinearLayout 
    	android:layout_width="wrap_content" 
    	android:layout_height="match_parent" 
    	android:layout_weight="0.2">
    <ImageView 
        	android:id="@+id/feed_favicon"
        	android:layout_marginRight="15dip"
        	android:layout_marginTop="50dip"
        	android:minHeight="22dip"
			android:minWidth="22dip" 
			android:maxHeight="22dip"
			android:maxWidth="22dip"         
			android:layout_width="22dip" 
			android:layout_height="22dip">
        </ImageView>
    </LinearLayout>
</LinearLayout>