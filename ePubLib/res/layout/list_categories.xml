<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/category_bg_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal" 
  android:background="@drawable/feed_bg_blue">
  <LinearLayout 
    		  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_weight="1"
			  android:layout_marginLeft="10dip">
    <ImageView android:id="@+id/category_icon" 
    		   android:layout_width="wrap_content"
    		   android:layout_height="wrap_content"
    		   android:layout_gravity="center_vertical"
    		   android:src="@drawable/icon_all_feeds_white">
    </ImageView>
    <TextView android:layout_height="wrap_content"
    		  android:text="TextView"
    		  android:textColor="#FFF"
    		  android:textSize="28sp"
    		  android:layout_marginLeft="10dip"
    		  android:layout_marginTop="20dip"
    		  android:layout_marginBottom="20dip"
    		  android:layout_width="match_parent"
    		  android:id="@+id/category_name">
    </TextView>
    </LinearLayout>
    <LinearLayout 
    		  android:id="@+id/unread_count_layout"
    		  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_vertical"
			  android:layout_marginRight="10dip"
			  android:layout_weight="0">
    <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
		    	android:background="@drawable/unread_count_bg_left">
	</LinearLayout>
	<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@drawable/unread_count_bg_center">
    <TextView 
    		  android:layout_width="wrap_content"
			  android:layout_height="match_parent"
			  android:gravity="center_vertical"
    		  android:text="TextView"
    		  android:textColor="#FFF"
    		  android:textStyle="bold"
			  android:textSize="12sp"    		  
    		  android:id="@+id/unread_count">
    </TextView>
    </LinearLayout>
    <LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
		    	android:background="@drawable/unread_count_bg_right">
	</LinearLayout>
	</LinearLayout>    
</LinearLayout>
